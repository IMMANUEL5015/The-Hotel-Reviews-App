<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;" class="form-h1">Edit Comment</h1>
        <div class="form-container">
            <form action="/hotels/<%= hotelid %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="text">Edit your comment</label>
                    <input class="form-control" type="text" name="comment[text]" id="text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-lg btn-primary btn-block">
                </div>
             </form>
             <a href="/hotels">Go Back</a>
        </div>
    </div>
    
<% include ../partials/footer %>