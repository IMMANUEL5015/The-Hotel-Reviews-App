<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center;" class="form-h1">Add New Comment to <%= hotel.name %></h1>
        <div class="form-container">
            <form action="/hotels/<%= hotel._id %>/comments" method="POST">
                <div class="form-group">
                    <label for="text">Enter your comment</label>
                    <input class="form-control" type="text" name="comment[text]" id="text" placeholder="text">
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-lg btn-primary btn-block">
                </div>
             </form>
             <a href="/hotels">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>