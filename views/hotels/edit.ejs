<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center;" class="form-h1">Edit <%= hotel.name %></h1>
        <div class="form-container">
            <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Edit Hotel Name</label>
                    <input class="form-control" type="text" name="hotel[name]" id="name" value="<%= hotel.name %>">
                </div>
                <div class="form-group">
                    <label for="cost">Edit Hotel Cost Per Night</label>
                    <input class="form-control" type="number" name="hotel[price]" id="cost" value="<%= hotel.price %>" min="1" step="1">
                </div>
                <div class="form-group">
                    <label for="image">Change Hotel Image</label>
                    <input class="form-control" type="file" name="image" id="image" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="description">Edit Hotel Description</label>
                    <textarea name="hotel[description]" id="description" class="form-control" rows="5"><%= hotel.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="location">Edit Location</label>
                    <input class="form-control" type="text" name="hotel[location]" id="location" value="<%= hotel.location %>">
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-lg btn-primary btn-block">
                </div>
             </form>
             <a href="/hotels/<%= hotel._id %>">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>